@model WebProfessor.Models.Professor

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
</head>
<body>
    <h2>Cadastro de Professores</h2>
    <div class="container">
        <hr />
        @Html.ActionLink("Home", "List", "Professor")
        <br /><br />
        @using (Html.BeginForm())
        {

            @Html.HiddenFor(m => Model.Codigo)

            <div class="form-group">
                @Html.LabelFor(m => Model.Nome)
                @Html.ValidationMessageFor(m => Model.Nome)
                @Html.TextBoxFor(m => Model.Nome, new { @class = "form-control" })
            </div>
            <input type="submit" name="Salvar" value="Salvar" class="btn btn-default" />


        }

    </div>
</body>
</html>

